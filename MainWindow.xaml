<Window x:Class="CryptoNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoNote"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None">

    <Grid x:Name="MainRoot" Background="#FF151313">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="ToolBar" Height="75"/>
            <RowDefinition x:Name="Menu" Height="85"/>
            <RowDefinition x:Name="TextWrite"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="Black">
            <TextBlock Margin="5" Text="Новый файл.txt" Foreground="White" FontSize="48"/>
        </Grid>
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.Background>
                <SolidColorBrush Color="#FFD9D9D9" Opacity="0.19"/>
            </Grid.Background>

        </Grid>
        <Menu Grid.Row="1" Margin="0,0,290,0">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать"/>
                <MenuItem Header="Открыть"/>
                <MenuItem Header="Сохранить"/>
                <MenuItem Header="Сохранить как..."/>
                <MenuItem Header="Выход"/>
                
            </MenuItem>
        </Menu>
    </Grid>

</Window>
